<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_currency_tree" model="ir.ui.view">
        <field name="name">res.currency.tree.nbp</field>
        <field name="inherit_id" ref="base.view_currency_tree"/>
        <field name="model">res.currency</field>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="x_nbp_table"/>
                <field name="create_date" widget="date"/>
                <field name="inverse_rate" digits="[12,6]"/>
            </field>
        </field>
    </record>

    <record id="view_currency_form" model="ir.ui.view">
        <field name="name">res.currency.form.nbp</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="model">res.currency</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rate_ids']/tree/field[@name='company_rate']" position="after">
                <field name="x_nbp_table"/>
                <field name="create_date" widget="date"/>
            </xpath>
        </field>
    </record>
</odoo>

